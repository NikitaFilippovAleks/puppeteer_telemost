# Пример файла переменных окружения
# Скопируйте этот файл в .env и заполните нужные значения

# URL встречи в Yandex Telemost
TELEMOST_URL=https://telemost.yandex.ru/your-meeting-url

# Длительность записи в секундах (по умолчанию 300 = 5 минут)
RECORDING_DURATION=300

# Путь для сохранения аудио файла
OUTPUT_PATH=./recordings/audio_$(date +%s).webm

# Настройки браузера
BROWSER_HEADLESS=false

# Дополнительные аргументы для браузера (через запятую)
BROWSER_ARGS=--use-fake-ui-for-media-stream,--no-sandbox,--disable-setuid-sandbox
