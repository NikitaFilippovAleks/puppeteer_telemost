{
  "name": "puppeteer-telemost",
  "version": "1.0.0",
  "description": "Node.js application for recording audio from Yandex Telemost using Puppeteer",
  "main": "dist/api.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/api.js",
    "dev": "ts-node -r tsconfig-paths/register src/api.ts",
    "dev:watch": "nodemon --exec \"ts-node -r tsconfig-paths/register src/api.ts\"",
    "clean": "rm -rf dist",
    "docker": "docker run --rm -e TELEMOST_URL=\"$TELEMOST_URL\" puppeteer-telemost"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "puppeteer": "^21.11.0",
    "puppeteer-stream": "^2.0.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/puppeteer": "^7.0.4",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
